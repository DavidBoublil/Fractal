<UserControl x:Class="Converters.Views.ShapeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:Converters"
             xmlns:viewModels="clr-namespace:Converters.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:ShapeControlViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:RelocateCoordinate x:Key="RelocateCoordinate"/>
        <local:NullToHidden x:Key="NullToHidden"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="2" BorderBrush="Black" Background="AliceBlue">
            <Canvas x:Name="DrawingCanvas" Background="Transparent" ClipToBounds="True">
                <Canvas.LayoutTransform>
                    <ScaleTransform ScaleY="-1"/>
                </Canvas.LayoutTransform>

                <Canvas.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding UpdateOriginCommand}" CommandParameter="{Binding ElementName=DrawingCanvas}"/>
                </Canvas.InputBindings>

                <ItemsControl x:Name="PointsView" ItemsSource="{Binding Shape}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse Width="8" Height="8" Margin="-4" Fill="Blue"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" >
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource RelocateCoordinate}" >
                                        <Binding Path="X"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.XOrigin"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.Scale"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Canvas.Top">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource RelocateCoordinate}" >
                                        <Binding Path="Y"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.YOrigin"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                </ItemsControl>

                <ItemsControl x:Name="LineView" ItemsSource="{Binding Shape}" Visibility="Hidden">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line Stroke="black" StrokeThickness="2" Visibility="{Binding Next, Converter={StaticResource NullToHidden}}">
                                <Line.X1>
                                    <MultiBinding Converter="{StaticResource RelocateCoordinate}" ConverterParameter="x1" >
                                        <Binding Path="X"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.XOrigin"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.Scale"/>
                                    </MultiBinding>
                                </Line.X1>
                                <Line.X2>
                                    <MultiBinding Converter="{StaticResource RelocateCoordinate}" ConverterParameter="x2" >
                                        <Binding Path="Next.X"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.XOrigin"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.Scale"/>
                                    </MultiBinding>
                                </Line.X2>
                                <Line.Y1>
                                    <MultiBinding Converter="{StaticResource RelocateCoordinate}" ConverterParameter="y1" >
                                        <Binding Path="Y"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.YOrigin"/>
                                    </MultiBinding>
                                </Line.Y1>
                                <Line.Y2>
                                    <MultiBinding Converter="{StaticResource RelocateCoordinate}" ConverterParameter="y2" >
                                        <Binding Path="Next.Y"/>
                                        <Binding ElementName="DrawingCanvas" Path="DataContext.YOrigin"/>
                                    </MultiBinding>
                                </Line.Y2>
                            </Line>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                </ItemsControl>

                <Line Stroke="gray" StrokeDashArray="2 2" StrokeThickness="1" 
                X1="0" X2="{Binding ElementName=DrawingCanvas, Path=ActualWidth}"
                Y1="{Binding YOrigin}" Y2="{Binding YOrigin}"/>
                <Line Stroke="gray" StrokeDashArray="2 2" StrokeThickness="1"
                      X1="{Binding XOrigin}" X2="{Binding XOrigin}"
                      Y1="0" Y2="{Binding ElementName=DrawingCanvas, Path=ActualHeight}"/>

            </Canvas>
        </Border>
        <Slider x:Name="slider" Grid.Row="1" Margin="0,8,0,0" Value="{Binding Scale}" Minimum="0.001" Maximum="5"/>


    </Grid>
</UserControl>
 