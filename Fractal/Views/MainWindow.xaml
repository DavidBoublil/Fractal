<Window x:Class="Converters.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converters"
        xmlns:viewModels="clr-namespace:Converters.ViewModels"
        xmlns:views="clr-namespace:Converters.Views"
        mc:Ignorable="d"
        Title="{Binding Test}" Height="450" Width="800"
        Background="LightGray">

    <Window.DataContext>
        <viewModels:ViewModel/>
    </Window.DataContext>

    <Grid Margin="1,0">
        <Grid.ColumnDefinitions> 
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="99,10,0,0" TextWrapping="Wrap" Text="{Binding Test, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <views:ShapeControl DataContext="{Binding ShapeControlVm}" Margin="99,53" />
    </Grid>
</Window>
